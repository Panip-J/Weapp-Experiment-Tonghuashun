.news-item {
  align-items: center;
  margin: 4px 0; /* 减小了条目间的外边距 */
  padding: 4px; /* 调整内边距看看效果 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.news-box {
  background-color: #eeebe7;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  padding: 5px; /* 减小整体内边距 */
  margin: 5px; /* 减小外边距 */
}


.news_num {
  font-size: 16px; /* 数字字体大小 */
  color: red; /* 数字颜色 */
  margin-right: 12px; /* 数字和文本之间的间距 */
}

.newstext {
  font-size: 14px; /* 文本字体大小 */
  color: #333; /* 文本颜色 */
  flex: 1; /* 让文本占据剩余空间 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 超出部分隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}


/* 头像样式 */
.avatar {
  width: 30px; /* 设置头像宽度 */
  height: 30px; /* 设置头像高度，保持与宽度一致形成正圆 */
  border-radius: 50%; /* 圆角半径为50%，生成圆形 */
  overflow: hidden; /* 隐藏超出圆形区域的部分 */
}


.TitleTime {
  font-size: 20px; /* 调整字体大小为20像素 */
  font-weight: bold; /* 设置字体为粗体 */
