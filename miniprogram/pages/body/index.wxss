.box{
  display: flex;
}
.xbox{
  display: flex;
}
.text{
  display: flex;
  flex-direction:column;
  width:20% ;
  margin: 0 10px;
  justify-content:space-around
}
.xtext{
  color: red;
  margin-left:10px ;
}
.bigtext{
  font-size: 32px;
  text-align: center;
  font-weight: 700;
  color: red;
}
.text1,.text2,.text3,.text4{
  font-size: 12px;
  font-weight: 700;
  margin: auto 0;
  margin-left: 10px;

}
.text1{
  color: red;
}
.text2,.text3{
  color: green;
}
.btn{
  display: flex;
  width: 100%;
  height: 50px;
  background-color:rgb(255, 255, 255);
  position:fixed;
  bottom: 0;
}
.btn1{
  width: 20px;
}

.icon{
  display: flex;
  flex-direction:column;
  font-size: 12px;
  text-align: center;
  margin-left: 90rpx;
  margin-right: 90rpx;
}
.qwe{
  border-radius:60px;
  width: 200rpx;
  height: 7vh;
  line-height: 7vh;
  margin: auto ;
  color: white;
  background: linear-gradient(to right, rgb(240, 74, 8), rgb(216,74,54)); 

}

.btn2{
  background-color: transparent;
  border: none;
}
.main-container {
  display: flex;
  flex-direction: row; /* 横向布局，将图形和数据并排显示 */
  width: 100%;
}

.van-tabs {
 
  padding-right: 40%; /* 右侧留下20%的内边距 */
  width: 270px;
}

.bodybox {
  padding-top: 10%;
  flex-direction: column; /* 数据垂直排列 */
  flex: 1; /* 数据占据较小空间 */
  width: 150px;
  padding-left: 10px; /* 添加一些左侧间距 */
}

.up_box, .down_box {
  display: flex;
  flex-direction: column; /* 设置为列布局 */
  width: 100%; /* 占满父容器的宽度 */
  font-size: 12px;
}

.up_box view, .down_box view {
  display: flex;
  justify-content: space-between; /* 在行内分散对齐子元素 */
  margin-bottom:2px; /* 行间距 */
}

.news_text{
  margin: 0 25rpx;
  font-size: 14px;
  /* text-align: left; */
  /* display: block; */
  /* text-overflow: ellipsis; */
  /* word-wrap: break-all; */
  word-break: break-all;
}

.bottom_text{
  display: flex;
  font-size: 14px;
  color: rgb(148, 152, 155);
  justify-content:space-between;
  margin: 20rpx 25rpx;
}

.news_box>view{
margin: 20px 0;
}



